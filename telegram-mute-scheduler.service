[Unit]
Description=telegram-mute-scheduler

[Service]
ExecStart=/home/jason/.nvm/versions/node/v18.2.0/bin/node /home/jason/prod/telegram-mute-scheduler/index.js
Restart=always
RestartSec=5
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/jason/prod/telegram-mute-scheduler

[Install]
WantedBy=multi-user.target